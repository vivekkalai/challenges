pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                 
                 sh '''docker info 

                       docker build -f ${WORKSPACE}/ci-cd-pipeline/Dockerfile -t test:1.1 .

                       docker images'''

            }
          stage('Pushing to Docker Hub') {
            steps {
                 
                 sh '''docker login --username kalaivasan --password Viveksan@1991
                       docker tag 1.1 kalaivasan/test_repo1
                       docker push test:1.1
                 '''
            }

        }
    }
}
}
